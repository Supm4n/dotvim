syntax on 
set number
colorscheme desert
set mouse=a
set showcmd
filetype plugin indent on
set history=700
set showmatch
set hlsearch
set incsearch
set cursorline
set ignorecase
filetype on
"set spelllang=en,fr
"set spell
"set spellsuggest=5
set guifont=Monaco
set tabstop=4
set shiftwidth=4
set softtabstop=4
set foldmethod=syntax
set ruler

" No annoying sound on errors
set noerrorbells
set novisualbell
set t_vb=
set tm=500

set colorcolumn=80
